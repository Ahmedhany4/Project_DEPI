<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Coffee Management System</title>

        <!-- Google Font: Source Sans Pro -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

        <!-- Font Awesome (Use correct path) -->
        <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">

        <!-- Ionicons (External CDN) -->
        <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

        <!-- Tempusdominus Bootstrap 4 (Correct path to local resources) -->
        <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

        <!-- iCheck (Correct path to local resources) -->
        <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">

        <!-- JQVMap (Correct path to local resources) -->
        <link rel="stylesheet" href="~/plugins/jqvmap/jqvmap.min.css">

        <!-- AdminLTE Theme style -->
        <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

        <!-- overlayScrollbars (Correct path to local resources) -->
        <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">

        <!-- Daterange picker (Correct path to local resources) -->
        <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">

        <!-- Summernote (Correct path to local resources) -->
        <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.min.css">
    </head>




<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-action="Index" asp-controller="Products" class="nav-link">Products</a>
                </li>
                 <li class="nav-item d-none d-sm-inline-block">
                    <a asp-action="Index" asp-controller="Categories" class="nav-link">Categories</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
               
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
               
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/logo-removebg-preview.svg" alt="Coffee Management System Logo" class="brand-image img elevation-3 bg-secondary" style="opacity: .8">
                <span class="brand-text font-weight-light">Coffee System</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Ahmed Hany</a>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a class="nav-link" >
                                <i class="fas fa-store"></i>
                                <p>
                                    Products
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Products" class="nav-link">
                                        <i class="fas fa-caret-right"></i>
                                        <p>
                                            Products
                                        </p>
                                    </a>
                                                  </li>

                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Products" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>
                                            Add Product
                                            <span class="right badge badge-danger">New</span>
                                        </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a  class="nav-link">
                                <i class="fas fa-list"></i>
                                <p >
                                    Categories
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Categories" class="nav-link">
                                        <i class="fas fa-caret-right"></i>
                                        <p>
                                            Categories
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Categories" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>
                                            Add Category    
                                        </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="fas fa-users"></i>
                                <p>
                                    Customers
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Customers" class="nav-link">
                                        <i class="fas fa-caret-right"></i>
                                        <p>
                                            Customers
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Customers" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>
                                            Add Customers
                                        </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                               <i class="fas fa-user-tie"></i>
                                <p>
                                    Employees
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Employees" class="nav-link">
                                        <i class="fas fa-caret-right"></i>
                                        <p>
                                            Employees
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Employees" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>
                                            Add Employee
                                        </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="fas fa-warehouse"></i>
                                <p>
                                    Suppliers
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Suppliers" class="nav-link">
                                        <i class="fas fa-caret-right"></i>
                                        <p>
                                            Suppliers
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Suppliers" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>
                                            Add Supplier
                                        </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="fas fa-credit-card"></i>
                                <p>
                                    Payments
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Payments" class="nav-link">
                                        <i class="fas fa-caret-right"></i>
                                        <p>
                                            Payments
                                            </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Payments" class="nav-link">
                                        <i class="fas fa-plus"></i>
                                        <p>
                                            Add Payments
                                        </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="fas fa-comment-dots"></i>
                                <p>
                                    Feedbacks
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Index" asp-controller="Feedbacks" class="nav-link">
                                        <i class="fas fa-caret-right"></i>
                                        <p>
                                            Feedbacks
                                        </p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        <div class="content-wrapper">
            <main role="main" class="content m-2">
                <div class="container-fluid">
                    @RenderBody()

                </div>
            </main>



        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; @{
                    var date =  DateTime.Now.Year;
                    @date;
                } <a href="/">Coffeee Magament System</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                by <b>Ahmed Hany</b> 
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
          <!-- Render Scripts section -->
             @RenderSection("Scripts", required: false)  

        <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
        <!-- jQuery UI 1.11.4 -->
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
        <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
        <script>
            $.widget.bridge('uibutton', $.ui.button)
        </script>
        <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- ChartJS -->
        <script src="plugins/chart.js/Chart.min.js"></script>
        <!-- Sparkline -->
    <script src="~/plugins/sparklines/sparkline.js"></script>
        <!-- JQVMap -->
        <script src="~/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
        <!-- jQuery Knob Chart -->
    <script src="~/plugins/jquery-knob/jquery.knob.min.js"></script>
        <!-- daterangepicker -->
    <script src="~/plugins/moment/moment.min.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
        <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
        <!-- Summernote -->
    <script src="~/plugins/summernote/summernote-bs4.min.js"></script>
        <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.js"></script>
        <!-- AdminLTE for demo purposes -->
        @* <script src="dist/js/demo.js"></script> *@
        <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/dist/js/pages/dashboard.js"></script>
         
             
    </body>
</html>
