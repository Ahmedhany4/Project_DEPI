@model CoffeeManagementSystem.Entities.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details Customer</h1>

<div>
    <h4>Customer</h4>
    <hr />
  
</div>
<div class="container">
    <h2>Details Of Category</h2>
    <div class="card">
        <div class="card-header">
            <h5>@Model.FirstName @Model.LastName</h5>
        </div>
        <div class="card-body">
            <p><strong>@Html.DisplayNameFor(model => model.FirstName):</strong> @Html.DisplayFor(model => model.FirstName)</p>
            <p><strong>@Html.DisplayNameFor(model => model.LastName):</strong> @Html.DisplayFor(model => model.LastName)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Phone):</strong> @Html.DisplayFor(model => model.Phone)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Email):</strong> @Html.DisplayFor(model => model.Email)</p>
            <p><strong>@Html.DisplayNameFor(model => model.LoyaltyPoints):</strong> @Html.DisplayFor(model => model.LoyaltyPoints)</p>
            <p><strong>@Html.DisplayNameFor(model => model.SuggestFlavour):</strong> @Html.DisplayFor(model => model.SuggestFlavour)</p>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-warning">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>
