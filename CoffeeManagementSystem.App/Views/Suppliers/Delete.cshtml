@model CoffeeManagementSystem.Entities.Models.Supplier

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container">
    <h2>Delete Category</h2>
    <h3 class="text-danger">Are you sure you want to delete this Category?</h3>

    <div class="card">
        <div class="card-header">
            <h5>@Model.SupplierName</h5>
        </div>
        <div class="card-body">
            <p><strong>@Html.DisplayNameFor(model => model.SupplierName):</strong> @Html.DisplayFor(model => model.SupplierName)</p>
            <p><strong>@Html.DisplayNameFor(model => model.ContactInfo):</strong> @Html.DisplayFor(model => model.ContactInfo)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Address):</strong> @Html.DisplayFor(model => model.Address)</p>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.SupplierId" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
