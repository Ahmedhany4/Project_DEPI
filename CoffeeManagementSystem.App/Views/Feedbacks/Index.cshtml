@model IEnumerable<CoffeeManagementSystem.Entities.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<h1>Feedback</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedbackDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            @* <th>Actions</th> *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderState)
            </td>
@*             <td>
                <a asp-action="Edit" asp-route-id="@item.FeedbackId" class="btn btn-primary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.FeedbackId" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.FeedbackId" class="btn btn-danger">Delete</a>
            </td> *@
        </tr>
}
    </tbody>
</table>
